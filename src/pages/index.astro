<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Bot Music Controller</title>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;700&display=swap" rel="stylesheet" />
  <style>
    body {
      background: linear-gradient(135deg, #0d0d0d, #1c1c1c);
      color: #ffffff;
      font-family: 'Outfit', sans-serif;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      padding: 20px;
    }

    h2 {
      margin-bottom: 20px;
    }

    .music-controls {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 15px;
    }

    input[type="text"] {
      width: 300px;
      padding: 10px;
      border-radius: 8px;
      border: none;
      font-size: 1rem;
    }

    .btn {
      padding: 12px 24px;
      font-size: 16px;
      font-weight: bold;
      text-transform: uppercase;
      border: none;
      border-radius: 10px;
      color: white;
      background-color: #4caf50;
      cursor: pointer;
      transition: background-color 0.3s, transform 0.2s;
    }

    .btn:hover {
      background-color: #43a047;
      transform: scale(1.05);
    }

    footer {
      margin-top: 40px;
      color: #aaa;
      font-size: 14px;
    }
  </style>
</head>
<body>

  <h2>ðŸŽµ Bot Music Player</h2>

  <div class="music-controls">
    <input type="text" id="musicUrl" placeholder="Paste music URL (e.g., .mp3, .m4a)">
    <div>
      <button class="btn" onclick="playMusic()">Play</button>
      <button class="btn" onclick="pauseMusic()">Pause</button>
    </div>
  </div>

  <audio id="audio" loop></audio>

  <footer>
    HACKLINK TECH.INC &copy; <span id="currentYear"></span>
  </footer>

  <script>
    const audio = document.getElementById('audio');
    const musicUrlInput = document.getElementById('musicUrl');

    function playMusic() {
      const url = musicUrlInput.value.trim();
      if (url) {
        if (audio.src !== url) {
          audio.src = url;
        }
        audio.play().catch(err => {
          alert("Unable to play music. Check the URL or browser settings.");
          console.error(err);
        });
      } else {
        alert("Please enter a valid music URL.");
      }
    }

    function pauseMusic() {
      audio.pause();
    }

    document.getElementById("currentYear").textContent = new Date().getFullYear();
  </script>

</body>
</html>
